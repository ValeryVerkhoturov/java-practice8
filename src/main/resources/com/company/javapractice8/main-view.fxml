   <TextField fx:id="vaccinationDrugName" layoutX="310.0" layoutY="180.0" />

   <!--Pets-->
   <TableView fx:id="petListView" layoutX="14.0" layoutY="47.0" prefHeight="337.0" prefWidth="149.0">
      <columns>
         <TableColumn fx:id="petList" prefWidth="148.0" text="Список" />
      </columns>
   </TableView>

   <!--Vaccination list of selected pet-->
   <Label layoutX="173.0" layoutY="192.0" text="Календарь прививок" />
   <TableView fx:id="selectedPetVaccinationListView" layoutX="173.0" layoutY="216.0" prefHeight="170.0" prefWidth="408.0">
      <columns>
         <TableColumn fx:id="vaccinationDateColumn" prefWidth="119.0" text="Дата" />
         <TableColumn fx:id="vaccinationTypeColumn" prefWidth="139.0" text="Тип" />
         <TableColumn fx:id="vaccinationDrugNameColumn" prefWidth="149.0" text="Название лекарства" />
      </columns>
   </TableView>

</AnchorPane>
