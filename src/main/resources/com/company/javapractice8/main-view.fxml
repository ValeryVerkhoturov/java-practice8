   <Label layoutX="10.0" layoutY="19.0" prefHeight="17.0" prefWidth="85.0" text="Мои питомцы" />

   <!--Add new Pet with empty properties-->
   <Button layoutX="93.0" layoutY="15.0" mnemonicParsing="false" onAction="#addPet" prefHeight="25.0" prefWidth="71.0" text="Добавить" />

