   <TextField fx:id="selectedNickname" layoutX="300.0" layoutY="19.0" />

   <Label layoutX="185.0" layoutY="54.0" text="Тип" />
   <TextField fx:id="selectedKind" layoutX="300.0" layoutY="50.0" />

   <Label layoutX="185.0" layoutY="89.0" text="Дата рождения" />

   <!--Add new Vaccination with empty properties-->
   <Button layoutX="475.0" layoutY="138.0" mnemonicParsing="false" onAction="#addVaccination" text="Добавить прививку" />

   <!--Submit Vaccination properties-->
   <Button layoutX="501.0" layoutY="176.0" mnemonicParsing="false" onAction="#submitVaccination" text="Подтвердить прививку" />

   <Label layoutX="200.0" layoutY="125.0" text="Дата прививки" />
